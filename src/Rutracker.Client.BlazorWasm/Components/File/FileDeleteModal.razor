@inject IModalService ModalService

<div class="form-group">
    <p>Do you want to remove a file with name <strong>@File.Name</strong> ?</p>
    <p class="m-0">File size - <strong>@File.Size</strong>.</p>
</div>

<div class="d-flex flex-row-reverse mt-4">
    <MatButton OnClick="@DeleteClicked" Label="Delete" />
    <MatButton OnClick="@CancelClicked" Label="Cancel" />
</div>

@code
{
    [CascadingParameter] public ModalParameters Parameters { get; set; }

    private FileViewModel File { get; set; }

    protected override void OnInitialized() => File = Parameters.Get<FileViewModel>(nameof(FileViewModel));

    private void DeleteClicked() => ModalService.Close(ModalResult.Ok(File));
    private void CancelClicked() => ModalService.Cancel();
}