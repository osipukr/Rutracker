@if (Action == ActionTypes.InProgress)
{
    <LoadingBackground>
        <span>Loading page model, please wait...</span>
    </LoadingBackground>
}
else if (Action == ActionTypes.Failed)
{
    <Alert Type="@AlertTypes.Danger">
        @Errors
    </Alert>
}
else
{
    @ChildContent
}

@code
{
    [Parameter] public ActionTypes Action { get; set; }
    [Parameter] public string Errors { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}