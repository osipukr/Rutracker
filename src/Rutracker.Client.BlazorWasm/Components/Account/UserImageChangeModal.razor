@inject IModalService ModalService

<EditForm Model="@ChangeImageModel" OnValidSubmit="@UpdateClicked">
    <DataAnnotationsValidator />

    <div class="form-group">
        <MatTextField @bind-Value="@ChangeImageModel.ImageUrl" Label="Image Url" FullWidth="true" />
        <ValidationMessage For="@(() => ChangeImageModel.ImageUrl)" />
    </div>

    <div class="d-flex flex-row-reverse mt-4">
        <MatButton Label="Update" type="submit" />
        <MatButton OnClick="@CancelClicked" Label="Cancel" />
    </div>
</EditForm>

@code
{
    private ChangeImageViewModel ChangeImageModel { get; set; } = new ChangeImageViewModel();

    private void UpdateClicked() => ModalService.Close(ModalResult.Ok(ChangeImageModel));
    private void CancelClicked() => ModalService.Cancel();
}