@inject IModalService ModalService

<div class="form-group">
    <p class="m-0">Do you want to remove a subcategory with name <strong>@Subcategory.Name</strong> ?</p>
    <p>This subcategory contains <strong>@Subcategory.TorrentsCount</strong> torrents, they will also be removed.</p>
</div>

<div class="d-flex flex-row-reverse mt-4">
    <MatButton OnClick="@DeleteClicked" Label="Delete" />
    <MatButton OnClick="@CancelClicked" Label="Cancel" />
</div>

@code
{
    [CascadingParameter] public ModalParameters Parameters { get; set; }

    private SubcategoryViewModel Subcategory { get; set; }

    protected override void OnInitialized() => Subcategory = Parameters.Get<SubcategoryViewModel>(nameof(SubcategoryViewModel));

    private void DeleteClicked() => ModalService.Close(ModalResult.Ok(Subcategory));
    private void CancelClicked() => ModalService.Cancel();
}