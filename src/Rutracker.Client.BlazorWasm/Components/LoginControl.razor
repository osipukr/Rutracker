<AuthorizeView Context="AuthorizeContext">
    <Authorized>
        <MatTooltip Tooltip="Logout" Wrap="true">
            <MatIconButton Link="@Constants.Path.Logout" Icon="@MatIconNames.Exit_to_app" />
        </MatTooltip>

        <MatTooltip Tooltip="Menu" Wrap="true">
            <MatIconButton OnClick="@MenuOpenClicked" Icon="@MatIconNames.Menu" @ref="_button" />
        </MatTooltip>

        <MatMenu @ref="_menu">
            <MatList>
                <MatListItem Href="@Constants.Path.Profile">Profile</MatListItem>
                <MatListItem Href="@Constants.Path.Login">Login</MatListItem>
                <MatListItem Href="@Constants.Path.Register">Register</MatListItem>
            </MatList>
        </MatMenu>
    </Authorized>
    <NotAuthorized>
        <MatTooltip Tooltip="Login" Wrap="true">
            <MatIconButton Link="@Constants.Path.Login" Icon="@MatIconNames.Account_box" />
        </MatTooltip>

        <MatTooltip Tooltip="Register" Wrap="true">
            <MatIconButton Link="@Constants.Path.Register" Icon="@MatIconNames.How_to_reg" />
        </MatTooltip>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private BaseMatIconButton _button;
    private BaseMatMenu _menu;

    private async Task MenuOpenClicked() => await _menu.OpenAsync(_button.Ref);
}