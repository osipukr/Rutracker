@layout LoginLayout

@inject IAccountService AccountService

@page "/account/password/reset"

@using Microsoft.AspNetCore.WebUtilities

<MatCard>
    @if (LoadAction == ActionTypes.Failed)
    {
        <Alert Type="@AlertTypes.Danger">
            @Errors
        </Alert>
    }

    <EditForm Model="@ResetModel" OnValidSubmit="@ResetPasswordAsync">
        <DataAnnotationsValidator />

        <div class="form-group">
            <MatTextField @bind-Value="@ResetModel.Password"
                          Label="Password"
                          Icon="@MatIconNames.Lock_open"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true"
                          type="password" />

            <ValidationMessage For="@(() => ResetModel.Password)" />
        </div>

        <div class="form-group">
            <MatTextField @bind-Value="@ResetModel.ConfirmPassword"
                          Label="Password Confirmation"
                          Icon="@MatIconNames.Lock_open"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true"
                          type="password" />

            <ValidationMessage For="@(() => ResetModel.ConfirmPassword)" />
        </div>

        <div class="d-flex flex-row-reverse my-3">
            <MatButton Label="Reset" Raised="true" type="submit" />
        </div>

        <hr />

        <div class="d-flex justify-content-center align-items-center">
            <MatButton Link="@Constants.Path.Home" Label="Home" Outlined="true" class="mr-3" />
            <MatButton Link="@Constants.Path.Login" Label="Login" Outlined="true" />
        </div>
    </EditForm>
</MatCard>

@code
{
    private ResetPasswordViewModel ResetModel { get; set; } = new ResetPasswordViewModel();

    protected override void OnInitialized()
    {
        var uri = new Uri(NavigationManager.Uri);

        ResetModel = new ResetPasswordViewModel
        {
            UserId = QueryHelpers.ParseQuery(uri.Query).TryGetValue(nameof(ResetPasswordViewModel.UserId), out var userId)
                ? userId.FirstOrDefault()
                : null,

            Token = QueryHelpers.ParseQuery(uri.Query).TryGetValue(nameof(ResetPasswordViewModel.Token), out var token)
                ? token.FirstOrDefault()
                : null
        };

        if (ResetModel.UserId == null || ResetModel.Token == null)
        {
            NavigationManager.NavigateTo(Constants.Path.Home);
        }
    }

    private async Task ResetPasswordAsync()
    {
        await LoadAsync(async () => await AccountService.ResetPassword(ResetModel));

        if (LoadAction == ActionTypes.Succeeded)
        {
            NavigationManager.NavigateTo(Constants.Path.Login);
        }
    }
}