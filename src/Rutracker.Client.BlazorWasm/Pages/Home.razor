@page "/"

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.GetUserName()!</h1>
        <p>You can only see this content if you're authenticated.</p>
    </Authorized>
    <Authorizing>
        <h1>Authentication in progress</h1>
        <p>You can only see this content while authentication is in progress.</p>
    </Authorizing>
    <NotAuthorized>
        <p>You can only see this content if you're not authenticated.</p>
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Policy="@Policies.IsUser">
    <p>You can only see this if you're in the User policy.</p>
</AuthorizeView>
<AuthorizeView Policy="@Policies.IsAdmin">
    <p>You can only see this if you're in the Admin policy.</p>
</AuthorizeView>