@layout SmallLayout

<div class="auth-layout-root">
    <Grid Class="auth-layout-grid">
        <Grid Class="auth-layout-content"
              Item
              Large="@GridSize.Twelve"
              ExtraLarget="@GridSize.Twelve">
            <div class="auth-layout-content">
                <div class="auth-layout-content-header">
                    <IconButton Href="@Constants.Page.Home">
                        <ArrowBackIcon/>
                    </IconButton>
                </div>

                <div class="auth-layout-content-body">
                    @Body
                </div>
            </div>
        </Grid>
    </Grid>
</div>

@code
{
    [Parameter] public RenderFragment Body { get; set; }
}