<div class="Page-Toolbar-Root">
    <Button Class="Page-Toolbar-Button"
            Color="@Color.Primary"
            Variant="@ButtonVariant.Contained"
            OnClick="@AddClicked"
            Disabled="@IsButtonsDisable">
        Add new
    </Button>
</div>

@code
{
    [Parameter] public EventCallback<EventArgs> OnAddClick { get; set; }
    [Parameter] public bool IsButtonsDisable { get; set; }

    private async Task AddClicked(EventArgs e)
    {
        if (OnAddClick.HasDelegate)
        {
            await OnAddClick.InvokeAsync(e);
        }
    }
}