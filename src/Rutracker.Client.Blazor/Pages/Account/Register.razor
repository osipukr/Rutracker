@layout LoginLayout

@inject IAccountService AccountService

@page "/account/register"

<MatCard>
    <EditForm Model="@RegisterModel" OnValidSubmit="@RegisterClicked">
        <div class="form-group">
            <DataAnnotationsValidator />

            @if (Result == ServiceResult.Succeeded)
            {
                <Alert Type="success">To complete registration, check the email.</Alert>
            }
            else if (Result == ServiceResult.Failed)
            {
                <Alert Type="danger">@Errors</Alert>
            }
        </div>

        <div class="form-group">
            <MatTextField @bind-Value="@RegisterModel.UserName"
                          Label="User Name"
                          Icon="@MatIconNames.Person"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true" />
        </div>

        <div class="form-group">
            <MatTextField @bind-Value="@RegisterModel.Email"
                          Label="Email"
                          Icon="@MatIconNames.Mail_outline"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true" />
        </div>

        <div class="form-group">
            <MatTextField @bind-Value="@RegisterModel.Password"
                          Label="Password"
                          Icon="@MatIconNames.Lock_open"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true"
                          type="password" />
        </div>

        <div class="form-group">
            <MatTextField @bind-Value="@RegisterModel.ConfirmPassword"
                          Label="Password Confirmation"
                          Icon="@MatIconNames.Lock_open"
                          IconTrailing="true"
                          FullWidth="true"
                          Required="true"
                          type="password" />
        </div>

        <div class="form-group d-flex justify-content-end">
            <MatButton Label="Create account" Raised="true" type="submit" />
        </div>

        <MatButton Link="@Constants.Path.Login" Label="Login to account" Outlined="true" />
    </EditForm>
</MatCard>

@code
{
    private RegisterViewModel RegisterModel { get; set; } = new RegisterViewModel();

    private async Task RegisterClicked() => await LoadAsync(() => AccountService.Register(RegisterModel));
}