@inject IModalService ModalService

<div class="form-group">
    <p>Do you want to remove a category with name <strong>@Category.Name</strong> ?</p>
    <p class="m-0">This category contains <strong>@Category.SubcategoriesCount</strong> subcategories.</p>
</div>

<div class="d-flex flex-row-reverse mt-4">
    <MatButton OnClick="@DeleteClicked" Label="Delete" />
    <MatButton OnClick="@CancelClicked" Label="Cancel" />
</div>

@code
{
    [CascadingParameter] public ModalParameters Parameters { get; set; }

    private CategoryViewModel Category { get; set; }

    protected override void OnInitialized() => Category = Parameters.Get<CategoryViewModel>(nameof(CategoryViewModel));

    private void DeleteClicked() => ModalService.Close(ModalResult.Ok(Category));
    private void CancelClicked() => ModalService.Cancel();
}