@inject IModalService ModalService

<div class="form-group">
    Do you really want to delete the image?
</div>

<div class="form-group mt-4 d-flex flex-row-reverse">
    <MatButton OnClick="@DeleteClicked" Label="Delete" Raised="true" class="mr-2" />
    <MatButton OnClick="@CancelClicked" Label="Cancel" Raised="true" class="mr-2" />
</div>

@code
{
    private ChangeImageViewModel ChangeImageModel { get; set; } = new ChangeImageViewModel()
    {
        IsDelete = true
    };

    private void DeleteClicked() => ModalService.Close(ModalResult.Ok(ChangeImageModel));
    private void CancelClicked() => ModalService.Cancel();
}