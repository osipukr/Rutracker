<EditForm Model="@Comment" OnValidSubmit="@CreateCommentAsync" autocomplete="off">
    <div class="card-footer">
        <div class="input-group">
            @if (Creating)
            {
                <button style="width:100%;" class="btn btn-light">
                    <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> Creating...
                </button>
            }
            else
            {
                <InputText @bind-Value="@Comment.Text"
                           class="form-control"
                           placeholder="Type your message here..."
                           aria-label="Message"
                           required />

                <div class="input-group-append">
                    <button class="btn btn-warning"
                            type="submit">
                        Send
                    </button>
                </div>
            }
        </div>
    </div>
</EditForm>

@code
{
    [Parameter] public EventCallback<CommentCreateViewModel> OnCreate { get; set; }

    private CommentCreateViewModel Comment { get; set; } = new CommentCreateViewModel();
    private bool Creating { get; set; } = false;

    private async Task CreateCommentAsync()
    {
        Creating = true;
        StateHasChanged();

        await OnCreate.InvokeAsync(Comment);

        Comment = new CommentCreateViewModel();
        Creating = false;
        StateHasChanged();
    }
}