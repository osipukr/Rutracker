@inject IModalService ModalService

<EditForm Model="@Subcategory" OnValidSubmit="@CreateClicked">
    <DataAnnotationsValidator />

    <div class="form-group">
        <MatTextField @bind-Value="@Subcategory.Name"
                      Label="Name"
                      Icon="@MatIconNames.Create"
                      IconTrailing="true"
                      FullWidth="true"
                      Required="true" />

        <ValidationMessage For="@(() => Subcategory.Name)" />
    </div>

    <div class="form-group mb-0 mt-4 d-flex justify-content-end">
        <MatButton Label="Cancel" OnClick="@CancelClicked" />
        <MatButton Label="Create" Type="submit" />
    </div>
</EditForm>

@code
{
    private SubcategoryCreateViewModel Subcategory { get; set; } = new SubcategoryCreateViewModel();

    private void CreateClicked() => ModalService.Close(ModalResult.Ok(Subcategory));
    private void CancelClicked() => ModalService.Cancel();
}