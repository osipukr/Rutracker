@inject IModalService ModalService

<EditForm Model="@Category" OnValidSubmit="@UpdateClicked">
    <DataAnnotationsValidator />

    <div class="form-group">
        <MatTextField @bind-Value="@Category.Name"
                      Label="Name"
                      Icon="@MatIconNames.Create"
                      IconTrailing="true"
                      FullWidth="true"
                      Required="true" />

        <ValidationMessage For="@(() => Category.Name)" />
    </div>

    <div class="form-group mb-0 mt-4 d-flex justify-content-end">
        <MatButton @onclick="@CancelClicked" Label="Cancel" />
        <MatButton Label="Update" type="submit" />
    </div>
</EditForm>

@code
{
    [CascadingParameter] public ModalParameters Parameters { get; set; }

    private CategoryUpdateViewModel Category { get; set; }

    protected override void OnInitialized() => Category = Parameters.Get<CategoryUpdateViewModel>(nameof(CategoryUpdateViewModel));

    private void UpdateClicked() => ModalService.Close(ModalResult.Ok(Category));
    private void CancelClicked() => ModalService.Cancel();
}