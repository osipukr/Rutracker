<h1 class="my-3">@Value.Name</h1>

@if (Value.Subcategories != null)
{
    <div class="mat-layout-grid px-0">
        <div class="mat-layout-grid-inner">
            @foreach (var subcategory in Value.Subcategories)
            {
                <div class="mat-layout-grid-cell">
                    <MatCard Class="no-select mat-elevation-z5">
                        <MatCardContent>
                            <MatBody2 class="m-0 p-0">
                                <MatList SingleSelection="true" TwoLine="true" Class="p-0">
                                    <MatListItem>
                                        <MatListItemText>
                                            <MatListItemPrimaryText>Id</MatListItemPrimaryText>
                                            <MatListItemSecondaryText>@subcategory.Id</MatListItemSecondaryText>
                                        </MatListItemText>
                                    </MatListItem>

                                    <MatListItem>
                                        <MatListItemText>
                                            <MatListItemPrimaryText>Name</MatListItemPrimaryText>
                                            <MatListItemSecondaryText>@subcategory.Name</MatListItemSecondaryText>
                                        </MatListItemText>
                                    </MatListItem>
                                </MatList>
                            </MatBody2>
                        </MatCardContent>

                        <MatCardActions>
                            <MatCardActionIcons>
                                <div class="m-0 p-0 d-flex justify-content-center align-items-center" title="Torrents count">
                                    <span>@subcategory.TorrentsCount</span>
                                    <MatIconButton Icon="@MatIconNames.List" Class="ml-1" />
                                </div>
                            </MatCardActionIcons>
                        </MatCardActions>
                    </MatCard>
                </div>
            }
        </div>
    </div>
}

@code
{
    [Parameter] private CategoryViewModel Value { get; set; }
}