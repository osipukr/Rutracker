<h1 class="mb-3">@Value.Name</h1>

@if (Value.Subcategories == null)
{
    <LoadingBackground ShowLoader="false">
        <p class="m-0">Sorry, but subcategories not found</p>
    </LoadingBackground>
}
else if (Value.Subcategories.Length == 0)
{
    <LoadingBackground ShowLoader="false">
        <p class="m-0">Sorry, but subcategory list is empty</p>
    </LoadingBackground>
}
else
{
    <MatTable Items="@Value.Subcategories" Class="mat-elevation-z5">
        <MatTableHeader>
            <th>Id</th>
            <th>Torrent Count</th>
            <th>Name</th>
        </MatTableHeader>
        <MatTableRow>
            <td>@context.Id</td>
            <td>@context.TorrentsCount</td>
            <td>@context.Name</td>
        </MatTableRow>
    </MatTable>
}

@code
{
    [Parameter] private CategoryViewModel Value { get; set; }
}