<MatDialog @bind-IsOpen="@DialogIsOpen">
    <MatDialogTitle>Create Todo</MatDialogTitle>
    <MatDialogContent>
        <EditForm Model="@Category" OnValidSubmit="@CreateClicked">
            <DataAnnotationsValidator />

            <div class="form-group">
                <MatTextField @bind-Value="@Category.Name"
                              Label="Name"
                              Icon="@MatIconNames.Title"
                              IconTrailing="true"
                              FullWidth="true"
                              Required="true" />

                <ValidationMessage For="@(() => Category.Name)" />
            </div>
        </EditForm>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="@CloseClicked">Cancel</MatButton>
        <MatButton OnClick="@CreateClicked">Create category</MatButton>
    </MatDialogActions>
</MatDialog>

@code
{
    [Parameter] private bool DialogIsOpen { get; set; }
    [Parameter] private EventCallback Closed { get; set; }
    [Parameter] private EventCallback<CategoryCreateViewModel> Created { get; set; }

    private CategoryCreateViewModel Category { get; set; } = new CategoryCreateViewModel();

    private async Task CloseClicked() => await Closed.InvokeAsync(EventArgs.Empty);
    private async Task CreateClicked() => await Created.InvokeAsync(Category);
}