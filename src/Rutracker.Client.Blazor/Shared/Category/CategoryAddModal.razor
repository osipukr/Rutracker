@inject IModalService ModalService

<EditForm Model="@Category" OnValidSubmit="@CreateClicked">
    <DataAnnotationsValidator />

    <div class="form-group">
        <MatTextField @bind-Value="@Category.Name"
                      Label="Name"
                      Icon="@MatIconNames.Create"
                      IconTrailing="true"
                      FullWidth="true"
                      Required="true" />

        <ValidationMessage For="@(() => Category.Name)" />
    </div>

    <div class="form-group mb-0 mt-4 d-flex justify-content-end">
        <MatButton OnClick="@CancelClicked" Label="Cancel" />
        <MatButton Label="Create" type="submit" />
    </div>
</EditForm>

@code
{
    private CategoryCreateViewModel Category { get; set; } = new CategoryCreateViewModel();

    private void CreateClicked() => ModalService.Close(ModalResult.Ok(Category));
    private void CancelClicked() => ModalService.Cancel();
}