@inject AppState AppState
@inject IUriHelper UriHelper
@inject IMatToaster MatToaster

<AuthorizeView Context="AuthorizeContext">
    <Authorized>
        <MatTooltip Tooltip="Logout" Wrap="true">
            <MatIconButton Icon="@MatIconNames.Exit_to_app" OnClick="@(async () => await LogoutClicked())" />
        </MatTooltip>
    </Authorized>
    <NotAuthorized>
        <MatTooltip Tooltip="Login" Wrap="true">
            <MatIconButton Icon="@MatIconNames.Account_box" Link="@Constants.Path.Login" />
        </MatTooltip>

        <MatTooltip Tooltip="Register" Wrap="true">
            <MatIconButton Icon="@MatIconNames.How_to_reg" Link="@Constants.Path.Register" />
        </MatTooltip>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private async Task LogoutClicked()
    {
        try
        {
            await AppState.Logout();

            UriHelper.NavigateTo(Constants.Path.Home, forceLoad: true);
        }
        catch (Exception ex)
        {
            MatToaster.Add(ex.Message, MatToastType.Warning, "Failed logout");
        }
    }
}