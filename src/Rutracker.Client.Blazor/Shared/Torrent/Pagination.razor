@inject AppState AppState

@if (TotalPages > 1)
{
    <div class="mat-layout-grid p-0">
        <div class="mat-layout-grid-inner">
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                <div class="mdc-paginator">
                    <div class="mdc-paginator-container">
                        <div class="mdc-paginator-range-actions">
                            <span class="mdc-paginator-range-label ml-0 mr-1">
                                @($"Page {Page} of {TotalPages}")
                            </span>

                            <div class="mdc-paginator-range-buttons">
                                <MatIconButton OnClick="@(_ => PageChangeClicked(1))"
                                               Disabled="@(AppState.SearchInProgress || Page == 1)"
                                               Icon="@MatIconNames.First_page" />

                                <MatIconButton OnClick="@(_ => PageChangeClicked(Page - 1))"
                                               Disabled="@(AppState.SearchInProgress || !HasPrevious)"
                                               Icon="@MatIconNames.Navigate_before" />

                                <MatIconButton OnClick="@(_ => PageChangeClicked(Page + 1))"
                                               Disabled="@(AppState.SearchInProgress || !HasNext)"
                                               Icon="@MatIconNames.Navigate_next" />

                                <MatIconButton OnClick="@(_ => PageChangeClicked(TotalPages))"
                                               Disabled="@(AppState.SearchInProgress || Page == TotalPages)"
                                               Icon="@MatIconNames.Last_page" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code
{
    [Parameter] private int Page { get; set; }
    [Parameter] private int PageSize { get; set; }
    [Parameter] private int TotalPages { get; set; }
    [Parameter] private EventCallback<int> PageChanged { get; set; }
            
    private bool HasPrevious => Page > 1 && TotalPages > 1;
    private bool HasNext => Page < TotalPages;

    private void PageChangeClicked(int page) => PageChanged.InvokeAsync(page);
}