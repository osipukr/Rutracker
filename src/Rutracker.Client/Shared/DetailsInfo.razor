@if (Model != null)
{
    <ul class="list-group mb-4 shadow-lg rounded">
        <li class="list-group-item rounded">Id - @Model.Id</li>
        <li class="list-group-item rounded">Size - @Model.Size</li>
        <li class="list-group-item rounded">Date - @Model.Date.ToLongDateString()</li>
        <li class="list-group-item rounded">Title - @Model.Title</li>
        <li class="list-group-item rounded">Hash - @Model.Hash</li>
        <li class="list-group-item rounded">Forum title - @Model.ForumTitle</li>
        <li class="list-group-item rounded">IsDeleted - @ToFriendlyString(Model.IsDeleted))</li>

        @if (Model.Files.Any())
        {
            <li class="list-group-item rounded">
                <ul class="list-group">
                    @foreach (var file in Model.Files)
                    {
                        <li class="list-group-item rounded">@file.Name [Size: @file.Size]</li>
                    }
                </ul>
            </li>
        }

        <li class="list-group-item rounded">@((MarkupString)Model.Content)</li>
    </ul>
}

@functions
{
    [Parameter] protected TorrentDetailsItemViewModel Model { get; set; }

    public string ToFriendlyString(bool value) => value ? "Yes" : "No";
}