<nav class="navbar navbar-expand-sm fixed-top navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">@Brand</a>

        <button class="navbar-toggler" @onclick="@ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="@NavMenuCssClass navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/torrents">Torrents</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        Home
                        <span class="oi oi-home"></span>
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code
{
    private const string Brand = ClientConstants.ServiceName;

    private bool _collapseNavMenu = true;
    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() => _collapseNavMenu = !_collapseNavMenu;
}