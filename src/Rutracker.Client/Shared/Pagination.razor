@if (Model == null)
{

}
else
{
    <nav class="d-flex flex-column align-items-center">
        @if (Model.TotalItems > 0)
        {
            <ul class="pagination flex-wrap justify-content-center no-select">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
                    <button class="page-link" @onclick="@(_ => PageButtonClick(1))">
                        Begin
                    </button>
                </li>

                <li class="page-item @(Model.HasPrevious ? null : "disabled")">
                    <button class="page-link" @onclick="@(_ => PageButtonClick(Model.CurrentPage - 1))">
                        <span aria-hidden="true">&#171;</span>
                        <span class="sr-only">Previous</span>
                    </button>
                </li>

                @for (var i = StartIndex; i <= FinishIndex; i++)
                {
                    var currentIndex = i;

                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">
                                @i
                                <span class="sr-only">(current)</span>
                            </span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <button class="page-link" @onclick="@(_ => PageButtonClick(currentIndex))">
                                @i
                            </button>
                        </li>
                    }
                }

                <li class="page-item @(Model.HasNext ? null : "disabled")">
                    <button class="page-link" @onclick="@(_ => PageButtonClick(Model.CurrentPage + 1))">
                        <span aria-hidden="true">&#187;</span>
                        <span class="sr-only">Next</span>
                    </button>
                </li>

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : null)">
                    <button class="page-link" @onclick="@(_ => PageButtonClick(Model.TotalPages))">
                        End
                    </button>
                </li>
            </ul>

            <p class="m-0">Page: @Model.CurrentPage of @Model.TotalPages</p>
            <p class="m-0">Total items: @Model.TotalItems</p>
        }
    </nav>
}

@code
{
    [Parameter] protected PaginationViewModel Model { get; set; }
    [Parameter] protected Action<int> PageChanged { get; set; }

    private int MaxPages { get; set; }
    private int StartIndex { get; set; }
    private int FinishIndex { get; set; }

    protected override void OnInit() => MaxPages = ClientConstants.PaginationButtonCount;

    protected override void OnParametersSet()
    {
        if (Model == null)
        {
            return;
        }

        var before = (int)Math.Floor(MaxPages / 2.0);
        var after = (int)Math.Ceiling(MaxPages / 2.0) - 1;

        if (Model.CurrentPage <= before)
        {
            StartIndex = 1;
            FinishIndex = Math.Min(MaxPages, Model.TotalPages);
        }
        else if (Model.CurrentPage + after >= Model.TotalPages)
        {
            StartIndex = Math.Max(Model.TotalPages - MaxPages + 1, 1);
            FinishIndex = Model.TotalPages;
        }
        else
        {
            StartIndex = Model.CurrentPage - before;
            FinishIndex = Model.CurrentPage + after;
        }
    }

    private void PageButtonClick(int page) => PageChanged?.Invoke(page);
}