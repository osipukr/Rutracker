<table class="table table-hover table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr>
            @TableHeader
        </tr>
    </thead>
    <tbody>
        @if (Items.Any())
        {
            @foreach (var torrent in Items)
            {
                <tr onclick="@(() => TorrentRowClick(torrent.Id))">
                    @RowTemplate(torrent)
                </tr>
            }
        }
        else
        {
            <tr class="text-center">
                <td colspan="4">Torrent list empty ;(</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>@TableFooter</tr>
    </tfoot>
</table>

@functions
{
    [Parameter] protected RenderFragment TableHeader { get; set; }
    [Parameter] protected RenderFragment<TorrentItemViewModel> RowTemplate { get; set; }
    [Parameter] protected RenderFragment TableFooter { get; set; }
    [Parameter] protected IEnumerable<TorrentItemViewModel> Items { get; set; }
    [Parameter] protected Action<long> RowClickHandler { get; set; }

    private void TorrentRowClick(long id) => RowClickHandler?.Invoke(id);
}