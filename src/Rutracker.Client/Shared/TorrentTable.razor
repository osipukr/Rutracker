<table id="torrents-table" class="table table-hover table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr>
            @GridHeader
        </tr>
    </thead>
    <tbody>
        @if (Items.Any())
        {
            @foreach (var torrent in Items)
             {
                 <tr onclick="@(() => TorrentRowClick(torrent.Id))">
                     @GridRow(torrent)
                 </tr>
             }
        }
        else
        {
            <tr class="text-center">
                <td colspan="4">Torrent list empty ;(</td>
            </tr>
        }
    </tbody>
</table>

@functions
{
    [Parameter] protected RenderFragment GridHeader { get; set; }
    [Parameter] protected RenderFragment<TorrentItemViewModel> GridRow { get; set; }
    [Parameter] protected IEnumerable<TorrentItemViewModel> Items { get; set; }
    [Parameter] protected Action<long> RowClickHandler { get; set; }

    private void TorrentRowClick(long id) => RowClickHandler?.Invoke(id);
}