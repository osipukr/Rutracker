<div class="loading-container mat-elevation-z5" style="@Style">
    @ChildContent

    @if (ShowLoader)
    {
        <MatProgressBar Indeterminate="true" Reversed="true" Class="mt-3" />
    }
</div>

@code
{
    [Parameter] private bool ShowLoader { get; set; } = true;
    [Parameter] private string Style { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}