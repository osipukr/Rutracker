<div class="table-responsive rounded mb-3">
    <table class="table table-hover table-bordered mb-0">
        <thead class="thead-light">
            <tr>
                <th scope="col" style="width:20%">Register at</th>
                <th scope="col" style="width:20%">Size (bytes)</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        @if (Items == null || Items.Length == 0)
        {
            <tfoot>
                <tr>
                    <th colspan="3" class="text-center">Torrent list is empty ;(</th>
                </tr>
            </tfoot>
        }
        else
        {
            <tbody>
                @foreach (var torrent in Items)
                {
                    <tr>
                        <td title="@torrent.Date.ToShortDateString()">@torrent.Date.ToShortDateString()</td>
                        <td title="@torrent.Size">@torrent.Size</td>
                        <td title="@torrent.Title">
                            <a href="@TorrentDetailsUri(torrent.Id)" class="text-body">@torrent.Title</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

@code
{
    [Parameter] protected TorrentItemViewModel[] Items { get; set; }

    private static string TorrentDetailsUri(long id) => $"/torrent/{id}";
}