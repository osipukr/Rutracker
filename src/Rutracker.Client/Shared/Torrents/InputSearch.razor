@inherits InputBase<string>

<input @bind-value="@CurrentValue" @bind-value:event="oninput" type="search" id="@Id" class="@CssClass" placeholder="@Placeholder" />

@functions
{
    [Parameter] string Placeholder { get; set; }

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;

        return true;
    }
}  