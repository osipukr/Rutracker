<div class="card @Class">
    <div class="card-header" @onclick="@ToggleButtonClick">
        <h6 class="m-0">
            @Title
            <span class="float-right @ArrowCssClass"></span>
        </h6>
    </div>

    <div class="card-body @CollapseCssClass">
        @ChildContent
    </div>
</div>

@code
{
    [Parameter] string Class { get; set; }
    [Parameter] string Title { get; set; }
    [Parameter] bool Collapse { get; set; }
    [Parameter] RenderFragment ChildContent { get; set; }

    string CollapseCssClass => Collapse ? "collapse" : null;
    string ArrowCssClass => Collapse ? "oi oi-arrow-bottom" : "oi oi-arrow-top";

    void ToggleButtonClick() => Collapse = !Collapse;
}