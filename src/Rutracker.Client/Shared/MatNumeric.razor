@typeparam T
@inherits InputNumber<T>

<div class="@Class mat-numericUpDownField mdc-text-field _mdc-text-field--upgraded mdc-text-field--with-leading-icon mdc-text-field--with-trailing-icon mdc-text-field--fullwidth mdc-text-field--fullwidth-with-leading-icon mdc-ripple-upgraded">
    <MatIcon Icon="@MatIconNames.Border_color" Class="mdc-text-field__icon" />
    <InputNumber @bind-Value="@CurrentValue"
                 Class="mdc-text-field__input"
                 Id="@Id"
                 style="padding: 20px 16px 18px 100px; text-align: left;" />

    <label class="mdc-floating-label" for="@Id" style="padding-top: 2px;">@Label</label>
    <div class="mdc-line-ripple"></div>
</div>

@code
{
    [Parameter] private string Label { get; set; }
}