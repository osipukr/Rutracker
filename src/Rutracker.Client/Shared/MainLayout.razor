@inherits LayoutComponentBase
@inject ViewSettings ViewSettings

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection Align="@MatAppBarSectionAlign.Start">
                <img alt="@BrandName" class="logo-img" src="img/brand-dark.svg" title="@BrandName">
                <MatAppBarTitle>@BrandName</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatTooltip Tooltip="Github Repository">
                    <MatIconButton Link="https://github.com/osipukr/Rutracker-Blazor"
                                   RefBack="@context">
                        <i class="fa fa-github" aria-hidden="true"></i>
                    </MatIconButton>
                </MatTooltip>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
    <MatAppBarContent>
        <section class="container-fluid">@Body</section>
    </MatAppBarContent>
</MatAppBarContainer>

@functions {
    string BrandName => ViewSettings.ServiceName;
}