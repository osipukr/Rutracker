<div class="table-responsive rounded mb-3">
    <table class="table table-hover table-bordered mb-0">
        <thead class="thead-light">
            <tr>
                <th scope="col" style="width:10%">Id</th>
                <th scope="col" style="width:15%">Size (bytes)</th>
                <th scope="col" style="width:15%">Date</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        @if (Items?.Any() ?? false)
        {
            <tbody>
                @foreach (var torrent in Items)
                {
                    <tr>
                        <th scope="row" title="@torrent.Id">
                            <a href="@TorrentDetailsUri(torrent.Id)" class="text-body">@torrent.Id</a>
                        </th>
                        <td title="@torrent.Size">@torrent.Size</td>
                        <td title="@torrent.Date.ToShortDateString()">@torrent.Date.ToShortDateString()</td>
                        <td title="@torrent.Title">
                            <a href="@TorrentDetailsUri(torrent.Id)" class="text-body">@torrent.Title</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tfoot>
                <tr>
                    <th colspan="4" class="text-center">Torrent list is empty ;(</th>
                </tr>
            </tfoot>
        }
    </table>
</div>

@functions
{
    [Parameter] protected IEnumerable<TorrentItemViewModel> Items { get; set; }

    private static string TorrentDetailsUri(long id) => $"/torrent/{id}";
}