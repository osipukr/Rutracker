@page "/torrents"
@implements IDisposable
@inject ITorrentsClientService Client
@inject IUriHelper UriHelper
@inject ViewSettings ViewSettings

<div class="row">
    <div class="col-lg-3 pb-3">
        <Filtration Model="@FilterModel" ChangedHandler="@FilterApplyButtonClick" SearchTask="@SearchTask" />
    </div>

    <div class="col-lg-9">
        @if (Model != null)
        {
            <TorrentList Items="@Model.TorrentItems" />
            <Pagination Model="@Model.PaginationModel" PageChanged="@PageButtonClick" />
        }
        else
        {
        }
    </div>
</div>

@code
{
    TorrentsIndexViewModel Model { get; set; }
    FiltrationViewModel FilterModel { get; set; } = new FiltrationViewModel();
    Task<TorrentsIndexViewModel> SearchTask { get; set; }

    int Page { get; set; }
    int PageSize { get; set; }

    const string QueryTemplate = "/torrents?search={0}&page={1}";

    protected override async Task OnInitAsync()
    {
        await RefreshTypesAsync();

        UriHelper.OnLocationChanged += OnLocationChanges;
    }

    async void OnLocationChanges(object sender, LocationChangedEventArgs args) => await RefreshTypesAsync();

    async Task RefreshTypesAsync()
    {
        var uriQuery = new Uri(UriHelper.GetAbsoluteUri()).Query;

        Page = QueryHelpers.ParseQuery(uriQuery).TryGetValue("page", out var pageParam)
               && int.TryParse(pageParam.FirstOrDefault(), out var pageParamId)
               && pageParamId > 1
               ? pageParamId
               : 1;

        PageSize = ViewSettings.ItemsPerPageCount;

        await LoadTorrentsIndexAsync();
        StateHasChanged();
    }

    async Task LoadTorrentsIndexAsync()
    {
        SearchTask = null;
        StateHasChanged();

        SearchTask = Client.GetTorrentsIndexAsync(Page, PageSize, FilterModel);
        Model = await SearchTask;
    }

    void PageButtonClick(int page) => UriHelper.NavigateTo(string.Format(QueryTemplate, FilterModel.Search, page));

    void FilterApplyButtonClick() => UriHelper.NavigateTo(string.Format(QueryTemplate, FilterModel.Search, 1));

    public void Dispose() => UriHelper.OnLocationChanged -= OnLocationChanges;
}