@inject AppState AppState
@inject IUriHelper UriHelper
@inject IMatToaster MatToaster

@page "/torrents/{id:long}"

@if (AppState.SearchInProgress)
{
    <LoadingBackground>
        <span>Loading page model, please wait...</span>
    </LoadingBackground>
}
else if (Model?.TorrentDetailsItem == null)
{
    <LoadingBackground ShowLoader="false">
        <p>Torrent with id=@Id not found</p>
        <MatButton OnClick="@BackButtonClicked" Raised="true" Label="Return to full torrents list" />
    </LoadingBackground>
}
else
{
    <div class="mat-layout-grid px-0 pb-5">
        <div class="mat-layout-grid-inner">
            <div class="mat-layout-grid-cell">
                <MatIconButton Icon="@MatIconNames.Arrow_back" OnClick="@BackButtonClicked" />
            </div>
        </div>
    </div>

    <TorrentDetails Model="@Model.TorrentDetailsItem" />
}

@code
{
    [Parameter] private long Id { get; set; }

    private TorrentIndexViewModel Model { get; set; }

    protected override async Task OnInitAsync() => await LoadTorrentIndexAsync();

    private async Task LoadTorrentIndexAsync()
    {
        try
        {
            Model = await AppState.Torrent(Id);
        }
        catch (Exception ex)
        {
            MatToaster.Add(ex.Message, MatToastType.Warning, "Failed load torrent info");
        }
    }

    private void BackButtonClicked() => UriHelper.NavigateTo("/torrents");
}