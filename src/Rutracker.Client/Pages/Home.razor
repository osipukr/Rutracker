@page "/"

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name!</h1>
        <p>You can only see this content if you're authenticated.</p>
    </Authorized>
    <Authorizing>
        <h1>Authentication in progress</h1>
        <p>You can only see this content while authentication is in progress.</p>
    </Authorizing>
</AuthorizeView>

<MatSnackbar IsOpen="true">
    <MatSnackbarContent>
        If you like Rutracker Blazor, please put a <a href="https://github.com/osipukr/Rutracker-Blazor">star on GitHub</a>.
    </MatSnackbarContent>

    <MatSnackbarActions>
        <MatIconButton Icon="@MatIconNames.Stars"
                       Link="https://github.com/osipukr/Rutracker-Blazor"
                       Class="text-white" />
    </MatSnackbarActions>
</MatSnackbar>